<h1>Pirate</h1>
    <div class="pirate">
        <h4>Name: <%= @pirate.name %></h4>
        <h4>Weight: <%= @pirate.weight %></h4>
        <h4>Height: <%= @pirate.height %></h4>
    </div>

<h2>Ships</h2>
<ul>
    <% @pirate.ships.each_with_index do |ship, index| %>
    <li><%= index + 1 %>.</li>
    <div class="ship">
        <li>Name: <%= ship.name %></li>
        <li>Type: <%= ship.type %></li>
        <li>Booty: <%= ship.booty %></li>
    </div>
    <% end %>
</ul>